<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/itemCancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/itemDoneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/done" />
    </TableRow>

    <ImageView
        android:id="@+id/itemImg"
        android:layout_width="248dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/readytowear" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/item_size"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/itemSizeLabel"
            android:textColor="#5C5858" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textColor="#000000"
                android:text="S" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="M" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="L" />
        </RadioGroup>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itemPrice1dLabel"
            android:textColor="#5C5858" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#5C5858"
            android:text="Color : " />

        <RadioGroup
            android:id="@+id/RadioGroup01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/RadioButton03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFD801"
                android:checked="true" />

            <RadioButton
                android:id="@+id/RadioButton01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF0000" />

            <RadioButton
                android:id="@+id/RadioButton_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#306EFF" />
            
            <RadioButton
                android:id="@+id/RadioButton_color4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4CC552" />
            
            <RadioButton
                android:id="@+id/RadioButton_color5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" />
            
            <RadioButton
                android:id="@+id/RadioButton_color6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000" />

        </RadioGroup>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Days" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Week" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
        <EditText
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:maxLength="250"
                android:lines="3" 
                android:textColor="#000000"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
            android:text="Tell us more.." />

    </TableRow>

    <TableLayout
        android:id="@+id/itemDataTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000" >
    </TableLayout>

</LinearLayout>