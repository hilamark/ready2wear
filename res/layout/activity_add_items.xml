
    
    <!-- The main content view -->
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:background="#fff"
       android:baselineAligned="false"
       android:divider="?android:attr/dividerHorizontal"
       android:orientation="vertical"
       tools:context="com.ready2wear.views.AddItems" >
        
     <fragment
         android:id="@+id/addItem_edit"
         android:layout_width="match_parent"
         android:layout_height="300dp"
         android:layout_weight="1.71"
         class="com.ready2wear.views.AddItemFragment"
         tools:layout="@layout/activity_add_item_fragment" />
    
    <GridView
        android:id="@+id/addItems"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1.00"
        android:background="#E5E4E2"
        android:columnWidth="105dp"
        android:fadingEdge="horizontal"
        android:numColumns="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.41"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>


